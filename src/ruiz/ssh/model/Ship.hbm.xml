<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ruiz.ssh.model">

    <!-- class 和 table 对应 -->
    <class name="Ship" table="ship">
        <!-- 一一对应 -->
        <id name="id" column="id"><generator class="increment" /></id>
        <property name="name" column="name"></property>        
        <property name="seazone" column="seazone"></property>
        <property name="nation" column="nation"></property>
        <property name="port" column="port"></property>  
        <property name="info" column="info"></property>
        <property name="image" column="image"></property>
        <property name="vcap" column="vcap"></property> 
        <property name="wcap" column="wcap"></property> 
        <property name="cost" column="cost"></property>  
    </class>
</hibernate-mapping>