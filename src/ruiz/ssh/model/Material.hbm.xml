<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ruiz.ssh.model">

    <!-- class 和 table 对应 -->
    <class name="Material" table="material">
        <!-- 一一对应 -->
        <id name="id" column="id"><generator class="increment" /></id>
        <property name="name" column="name"></property>        
        <property name="type" column="type"></property>
        <property name="detail" column="detail"></property>   
        <property name="weight" column="weight"></property> 
        <property name="volume" column="volume"></property> 
    </class>
</hibernate-mapping>